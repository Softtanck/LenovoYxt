<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.cienet.lenovoyxt">

    <!--加载图片所需权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="cn.com.cienet.lenovoyxt.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="cn.com.cienet.lenovoyxt.activity.TestActivity" />

        <!--用来配置Glide的加载图片的操作方式,Glide默认加载图片的方式是RGB_565-->
        <!--<meta-data-->
        <!--android:name="cn.com.cienet.lenovoyxt.view.GlideConfiguration"-->
        <!--android:value="GlideModule" />-->
    </application>

</manifest>
